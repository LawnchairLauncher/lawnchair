<android.support.v7.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ch.deletescape.lawnchair.preferences.StyledSwitchPreferenceCompat
        android:defaultValue="false"
        android:key="pref_iconPopup_uninstall"
        android:icon="@drawable/ic_uninstall_no_shadow"
        android:persistent="true"
        android:title="@string/uninstall_drop_target_label" />

    <ch.deletescape.lawnchair.preferences.StyledSwitchPreferenceCompat
        android:defaultValue="true"
        android:key="pref_iconPopup_sesame"
        android:icon="@drawable/ic_sesame"
        android:persistent="true"
        android:title="@string/shortcut_sesame"
        app:controllerClass=".SesameShortcutController" />

    <ch.deletescape.lawnchair.preferences.StyledSwitchPreferenceCompat
        android:defaultValue="true"
        android:key="pref_iconPopup_edit"
        android:icon="@drawable/ic_edit_no_shadow"
        android:persistent="true"
        android:title="@string/action_preferences" />
</android.support.v7.preference.PreferenceScreen>
