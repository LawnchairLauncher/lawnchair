<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/weather_launcher_widget_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weather_widget_icon"
            android:layout_width="34.0dip"
            android:layout_height="34.0dip"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5.0dip"
            android:layout_marginEnd="8.0dip" />

        <TextView
            android:id="@+id/weather_widget_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="false"
            android:paddingBottom="2.0dip"
            android:textColor="@color/weather_widget_text_color"
            android:textSize="36.0dip" />
    </LinearLayout>

    <TextClock
        android:id="@+id/weather_widget_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:fontFamily="sans-serif"
        android:format12Hour="EEEE, MMMM d"
        android:format24Hour="EEEE, MMMM d"
        android:includeFontPadding="false"
        android:textAllCaps="true"
        android:textColor="@color/weather_widget_text_color"
        android:textSize="12.0sp" />
</LinearLayout>