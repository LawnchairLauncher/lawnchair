{
    "labels": [
        "dependencies"
    ],
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "groupName": "Kotlin",
            "groupSlug": "kotlin",
            "matchPackagePrefixes": [
                "com.google.devtools.ksp",
                "androidx.compose.compiler"
            ],
            "matchPackagePatterns": [
                "org.jetbrains.kotlin.*"
            ]
        },
        {
            "groupName": "AGP",
            "groupSlug": "agp",
            "matchPackagePatterns": [
                "com.android.*"
            ]
        },
        {
            "groupName": "dev.rikka.tools.refine",
            "groupSlug": "refine",
            "matchPackagePatterns": [
                "dev.rikka.tools.refine.*"
            ]
        },
        {
            "groupName": "androidx.lifecycle",
            "groupSlug": "lifecycle",
            "matchPackagePatterns": [
                "androidx.lifecycle:*"
            ]
        }
    ]
}
